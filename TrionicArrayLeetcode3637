class Solution {
    public boolean isTrionic(int[] nums) {
    int n=nums.length-1;
    int i=0;
    while(i<n && nums[i]<nums[i+1]){
        i++;
    }
    if(i==0 || i==n) return false;
    while(i<n && nums[i]>nums[i+1]){
        i++;
    }
    if(i==0 ||i==n) return false;
    while(i<n && nums[i]<nums[i+1]){
        i++;
    }
   return i==n;
        
    }
}
